{
	"name": "mazepress/core",
	"type": "wordpress-plugin",
	"description": "A package library for WordPress plugin and theme development.",
	"license": "MIT",
	"require": {
		"php": "^7.4 | ^8.0",
		"automattic/jetpack-autoloader": "^2.12",
		"composer/installers": "^2.2"
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "^2.1.4",
		"wp-cli/i18n-command": "^2.5",
		"wp-coding-standards/wpcs": "^3.0.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"szepeviktor/phpstan-wordpress": "^1.3.2",
		"phpunit/phpunit": "^9.6.16",
		"10up/wp_mock": "^1.0",
		"teqnomaze/code-coverage": "^1.0"
	},
	"scripts": {
		"phpcs": "./vendor/bin/phpcs --standard=phpcs.xml",
		"phpcbf": "./vendor/bin/phpcbf src tests",
		"phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit 2G",
		"phpunit": "./vendor/bin/phpunit --configuration phpunit.xml",
		"coverage": "./vendor/bin/code-coverage ./build/clover.xml 90",
		"make:pot": "./vendor/bin/wp i18n make-pot . ./languages/core.pot --include='src'",
		"make:mo": "./vendor/bin/wp i18n make-mo ./languages/core.pot'",
		"update:po": "./vendor/bin/wp i18n update-po ./languages/core.pot'",
		"post-install-cmd": "composer dump-autoload",
		"post-update-cmd": "composer dump-autoload"
	},
	"autoload": {
		"psr-4": {
			"Mazepress\\Core\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mazepress\\Core\\Tests\\": "tests"
		}
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"automattic/jetpack-autoloader": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"extra": {
		"installer-paths": {
			"packages/{$name}/": ["type:wordpress-plugin"]
		}
	}
}
