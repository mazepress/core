{
  "name": "core",
  "description": "A custom WordPress plugin.",
  "license": "MIT",
  "devDependencies": {
    "@wordpress/scripts": "^26.5.0",
    "@wordpress/stylelint-config": "^21.17.0",
    "bootstrap": "^4",
    "gulp": "^4",
    "gulp-cli": "^2",
    "gulp-dart-sass": "^1",
    "gulp-rename": "^2",
    "npm-run-all": "^4.1"
  },
  "scripts": {
    "build": "npm-run-all gulp fix fix",
    "gulp": "gulp",
    "fix": "npm-run-all -p fix:scss fix:css",
    "fix:css": "wp-scripts lint-style 'assets/css/**/*.css' --fix",
    "fix:scss": "wp-scripts lint-style 'assets/scss/**/*.scss' --fix",
    "check": "npm-run-all -p check:scss check:css",
    "check:scss": "wp-scripts lint-style 'assets/scss/**/*.scss'",
    "check:css": "wp-scripts lint-style 'assets/css/**/*.css'"
  }
}
